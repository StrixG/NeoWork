<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Toolbar.Media" parent="Widget.Material3.Toolbar.Surface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar.Media</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar.Media" parent="">
        <item name="colorSurface">@android:color/transparent</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="Widget.App.Button.Menu" parent="@style/Widget.Material3.Button.IconButton">
        <item name="iconTint">?colorControlNormal</item>
        <item name="iconSize">@dimen/menu_button_size</item>
        <item name="icon">@drawable/ic_menu</item>
    </style>

    <style name="Widget.App.ItemButton.TextIcon" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="iconTint">@color/item_button_tint</item>
        <item name="android:textColor">@color/item_button_tint</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Widget.App.ItemButton.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/item_button_tint</item>
        <item name="iconSize">18dp</item>
    </style>

    <style name="Widget.App.CommentButton" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconTint">@color/item_button_tint</item>
        <item name="android:textColor">@color/item_button_tint</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Button.Attachment" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.App.Button.RemoveAttachment" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">2dp</item>
        <item name="iconTint">?colorControlNormal</item>
        <item name="iconGravity">textStart</item>
        <item name="icon">@drawable/ic_close</item>
    </style>
</resources>
